<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Auto_Theme_Switcher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Auto_Theme_Switcher">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="Font1">/Assets/Fonts/MiSans.ttf#MiSans Normal</FontFamily>
            <FontFamily x:Key="Font2">/Assets/Fonts/HOSSans.ttf#Harmony OS Sans</FontFamily>

            <Style x:Key="AccentToggleSwitchStyle" TargetType="ToggleSwitch">
                <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}" />
                <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}" />
                <Setter Property="BorderBrush" Value="{ThemeResource AccentButtonBorderBrush}" />
                <Setter Property="BorderThickness" Value="{ThemeResource ToggleButtonBorderThemeThickness}" />
                <Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
