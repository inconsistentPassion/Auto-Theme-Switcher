<Window
    x:Class="AutoThemeSwitcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <!-- Title bar area -->
        <Grid x:Name="AppTitleBar" Height="48" VerticalAlignment="Top">
            <Image Source="/Assets/app.png" 
           Width="16" 
           Height="16" 
           Margin="8,0,0,0" 
           HorizontalAlignment="Left"/>
            <TextBlock Text="Auto Theme Switcher" 
                     VerticalAlignment="Center"
                     Margin="48,0,0,0"
                     Style="{StaticResource CaptionTextBlockStyle}"/>
        </Grid>

        <!-- Main content -->
        <Grid Margin="24,48,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="12">
                <TextBlock x:Name="LocationTextBlock" 
                          Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock x:Name="ThemeStatusTextBlock" 
                          Style="{StaticResource BodyTextBlockStyle}"/>
                <TextBlock x:Name="NextSwitchTextBlock" 
                          Style="{StaticResource BodyTextBlockStyle}"/>
                <TextBlock x:Name="SunriseTextBlock" 
                          Style="{StaticResource BodyTextBlockStyle}"/>
                <TextBlock x:Name="SunsetTextBlock" 
                          Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right" 
                      Spacing="8">
                <Button x:Name="ToggleButton" 
                        Click="ToggleButton_Click" 
                        Style="{StaticResource AccentButtonStyle}">
                    Toggle Theme
                </Button>
                <Button Click="QuitButton_Click">Quit</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
