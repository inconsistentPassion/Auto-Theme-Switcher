<Window
    x:Class="AutoThemeSwitcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid x:Name="AppTitleBar" Height="48" VerticalAlignment="Top">
            <Image Source="/Assets/app.png" Width="26" Height="26" Margin="12,0,0,0" HorizontalAlignment="Left"/>
            <TextBlock Text="Auto Theme Switcher" VerticalAlignment="Center" Margin="48,0,0,0" Style="{StaticResource CaptionTextBlockStyle}"/>
        </Grid>

        <Grid Margin="24,48,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{ThemeResource SystemAccentColor}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <TextBlock x:Name="LocationTextBlock" Style="{StaticResource SubtitleTextBlockStyle}" Foreground="White"/>
            </Border>

            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" CornerRadius="8" Padding="16" Margin="0,0,6,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🌓" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Theme Status" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                            <TextBlock x:Name="ThemeStatusTextBlock" Style="{StaticResource BodyTextBlockStyle}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" CornerRadius="8" Padding="16" Margin="6,0,0,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="⏱️" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Next Switch" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                            <TextBlock x:Name="NextSwitchTextBlock" Style="{StaticResource BodyTextBlockStyle}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" CornerRadius="8" Padding="16" Margin="0,6,6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🌅" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Sunrise" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                            <TextBlock x:Name="SunriseTextBlock" Style="{StaticResource BodyTextBlockStyle}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" CornerRadius="8" Padding="16" Margin="6,6,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🌇" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Sunset" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                            <TextBlock x:Name="SunsetTextBlock" Style="{StaticResource BodyTextBlockStyle}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button x:Name="ToggleButton" Click="ToggleButton_Click" Style="{StaticResource AccentButtonStyle}">Toggle Theme</Button>
                <Button x:Name="QuitButton" Click="QuitButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7E8;" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Quit"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
