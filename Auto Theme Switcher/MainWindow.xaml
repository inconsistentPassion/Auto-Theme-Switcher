<Window
    x:Class="AutoThemeSwitcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid x:Name="RootGrid">
        <!-- Modern Acrylic Background -->
        <Grid.Background>
            <AcrylicBrush 
                BackgroundSource="HostBackdrop" 
                TintColor="#1e293b" 
                TintOpacity="0.8"
                FallbackColor="#1e293b"/>
        </Grid.Background>

        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar" Height="48" VerticalAlignment="Top" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Image Source="/Assets/app.png" Width="26" Height="26" Margin="12,0,0,0" HorizontalAlignment="Left"/>
            <TextBlock Grid.Column="1" Text="Auto Theme Switcher" VerticalAlignment="Center" Margin="48,0,0,0" 
                       Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
            
            <!-- Window Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Style="{StaticResource TitleBarButtonStyle}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE921;" FontSize="12"/>
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource TitleBarButtonStyle}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8BB;" FontSize="12"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Margin="24,48,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Location Status with Modern Design -->
            <Border Grid.Row="0" Background="{StaticResource SystemControlBackgroundBaseLowBrush}" 
                    CornerRadius="12" Padding="16" Margin="0,0,0,16" BorderThickness="1" 
                    BorderBrush="{StaticResource SystemControlBackgroundBaseMediumLowBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <FontIcon Grid.Column="0" FontFamily="Segoe Fluent Icons" Glyph="&#xE81D;" 
                              FontSize="20" Margin="0,0,12,0" Foreground="{StaticResource SystemAccentColor}"/>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="LocationTextBlock" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="Current Location" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" x:Name="RefreshLocationButton" Click="RefreshLocationButton_Click"
                            Style="{StaticResource IconButtonStyle}" ToolTipService.ToolTip="Refresh Location">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE72C;" FontSize="14"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Status Cards Grid -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Theme Status Card -->
                <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource SystemChromeLowColor}" 
                        CornerRadius="12" Padding="20" Margin="0,0,8,8" BorderThickness="1" 
                        BorderBrush="{StaticResource SystemControlBackgroundBaseMediumLowBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Ellipse Grid.Row="0" x:Name="ThemeIndicator" Width="16" Height="16" 
                                 Fill="{StaticResource SystemAccentColor}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" x:Name="ThemeIcon" Text="🌓" FontSize="32" HorizontalAlignment="Center" Margin="0,8"/>
                        
                        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                            <TextBlock Text="Theme Status" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ThemeStatusTextBlock" FontSize="16" FontWeight="SemiBold" 
                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Next Switch Card -->
                <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource SystemChromeLowColor}" 
                        CornerRadius="12" Padding="20" Margin="8,0,0,8" BorderThickness="1" 
                        BorderBrush="{StaticResource SystemControlBackgroundBaseMediumLowBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <FontIcon Grid.Row="0" FontFamily="Segoe Fluent Icons" Glyph="&#xE121;" 
                                  FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Next Switch" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="NextSwitchTextBlock" FontSize="18" FontWeight="SemiBold" 
                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <ProgressBar Grid.Row="2" x:Name="SwitchProgressBar" Minimum="0" Maximum="100" 
                                     Value="65" Height="4" CornerRadius="2" Margin="0,8,0,0"/>
                    </Grid>
                </Border>

                <!-- Sunrise Card -->
                <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource SystemChromeLowColor}" 
                        CornerRadius="12" Padding="20" Margin="0,8,8,0" BorderThickness="1" 
                        BorderBrush="{StaticResource SystemControlBackgroundBaseMediumLowBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🌅" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Sunrise" FontSize="11" Opacity="0.7"/>
                            <TextBlock x:Name="SunriseTextBlock" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Sunset Card -->
                <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource SystemChromeLowColor}" 
                        CornerRadius="12" Padding="20" Margin="8,8,0,0" BorderThickness="1" 
                        BorderBrush="{StaticResource SystemControlBackgroundBaseMediumLowBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🌇" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Sunset" FontSize="11" Opacity="0.7"/>
                            <TextBlock x:Name="SunsetTextBlock" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Control Panel -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Automation Toggle -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Automation:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Medium"/>
                    <ToggleSwitch x:Name="AutomationToggleSwitch" Toggled="AutomationToggleSwitch_Toggled" 
                                  OffContent="" OnContent="" Style="{StaticResource DefaultToggleSwitchStyle}"/>
                </StackPanel>

                <!-- Startup Toggle -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Run on Startup:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Medium"/>
                    <ToggleSwitch x:Name="StartupToggleSwitch" Toggled="StartupToggleSwitch_Toggled" 
                                  OffContent="" OnContent="" Style="{StaticResource DefaultToggleSwitchStyle}"/>
                </StackPanel>

                <!-- Quit Button -->
                <Button Grid.Column="2" x:Name="QuitButton" Click="QuitButton_Click" 
                        Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7E8;" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Quit"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>